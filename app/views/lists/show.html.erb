

  <h1><%= @list.title %></h1>
  <h4>Incomplete Tasks</h4>

<% @list.tasks.incomplete.each do |task|%>
<p><%= task.title %> <%= button_to "Complete", complete_task_path(@list.id, task.id) %></p>
<% end %>

  <h4>Completed Tasks</h4>
<div id = "completed">
<% @list.tasks.completed.each do |task|%>
<p><%= task.title %></p>
<% end %>
</div>

<h4>Add Task</h4>
<%= form_for [@list, @list.tasks.new] do |f| %>
  <%= f.text_field :title %>
  <%= f.submit "Add Task" %>
<% end %>


<%= link_to "Back to all lists", lists_path %>




